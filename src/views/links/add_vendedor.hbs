<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro de nuevo vendedor</h3>
                </div>
                <div class="card-body">
                    <form action="/links/add_vendedor" method="POST">
                     <div class="form-group">
                         <input type="text" name="name" placeholder="Nombres" class="form-control" autofocus>
                     </div>
                     <div class="form-group">
                         <input type="text" name="secondname" placeholder="Apellidos" class="form-control">
                     </div>
                     <div class="form-group">
                         <input type="text" name="telefono" placeholder="Telefono" class="form-control">
                     </div>
                     <div class="form-group">
                         <div class="form-group">
                         <input type="text" name="cedula" placeholder="Cedula" class="form-control">
                     </div>
                     
                     <div class="form-group">
                         <button type="submit" class="btn btn-success btn-block">
                             Registrar
                         </button>
                     </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>