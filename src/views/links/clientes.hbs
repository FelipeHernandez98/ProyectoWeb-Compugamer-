<div class="container">
    <div class="row">
        
                    <div class="demo p-4">
                        <form class="form-search content-search navbar-form" action="#"
                            method="get">
                            <div class="input-group">
                                <input placeholder="Buscar Cliente" class="form-control form-text" type="search" name="dato"
                                    size="30" maxlength="128" required />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-primary"><span
                                            class="icon glyphicon glyphicon-search" aria-hidden="true"></span><i
                                            class="fa fa-search fa-lg">&nbsp;</i></button>&nbsp;
                                </span>
                            </div>
                        </form> 
                    </div>
                    
                     <div class="p-4 mx-auto"> 
      <a class="btn btn-warning" href="/links/clientes">Refrescar</a>&nbsp;
        </div>   
                    <table class="table table-responsive  table-hover d-flex justify-content-center">
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Fecha Registro</th>
                            <th>Facturas Asociadas (Compras Realizadas)</th>
                        
                        </tr>
                     {{#each clientes}}
                      <tr>
                          <td>{{id}}</td>
                          <td>{{clie_nomb}}</td>
                          <td>{{clie_apell}}</td>
                          <td>{{fecha_registro}}</td>
                          <td><form action="/links/listar_facturas/{{id}}" method="get">
                          <input class ="btn btn-danger" type="submit" id="{{id}}" value="Ver Todas">
                          </form></td>
                      </tr>

                     {{/each}}
                     </table>
                
    </div>
</div>

<style type="text/css"> 
body{ 
    
    overflow: auto !important;
}
</style> 